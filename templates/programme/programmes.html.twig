
{% extends 'base-frontlist.html.twig' %}

{% block title %}Offers{% endblock %}




{% block body %}









	<div class="offers">


		<!-- Offers -->

		<div class="container">
			<div class="row">
				<div class="col-lg-1 temp_col"></div>
				<div class="col-lg-11">

					<!-- Offers Sorting -->

				</div>
			</div>
		</div>

		<div class="col-lg-12">
			<!-- Offers Grid -->

			<div class="offers_grid">

				<!-- Offers Item -->
				{% for programme in programmes %}

					<div class="offers_item rating_4">
						<div class="row">
							<div class="col-lg-1 temp_col"></div>
							<div class="col-lg-3 col-1680-4">
								<div class="offers_image_container">
									<!-- Image by https://unsplash.com/@kensuarez -->
									{% for image in programme.getImages() %}


										<div class="offers_image_background" style="background-image:url({{ asset('uploads/')~image.getNom() }})"></div>
									{% endfor %}
									<div class="offer_name"><a href="{{ asset('single_listing.html') }}">{{ programme.Titre }}</a></div>
								</div>
							</div>
							<div class="col-lg-8">
								<div class="offers_content">
									<div class="offers_price">{{ programme.prix }}<span>dt</span></div>
									<p class="offers_text"> Categorie: {{ programme.category }}</p>
									<p class="offers_text">Date: {{ programme.date ? programme.date|date('Y-m-d') : '' }}</p>

									<p class="offers_text">{{ programme.description }}</p>
									<div class="offers_icons">
										<ul class="offers_icons_list">
											<li class="offers_icons_item"><img src="{{ asset('images/post.png')}}" alt=""></li>
											<li class="offers_icons_item"><img src="{{ asset('images/compass.png')}}" alt=""></li>
											<li class="offers_icons_item"><img src="images/bicycle.png')}}" alt=""></li>
											<li class="offers_icons_item"><img src="{{ asset('images/sailboat.png')}}" alt=""></li>
										</ul>
									</div>
									<div class="button book_button"><a href="{{ ('#') }}">RÃ©server<span></span><span></span><span></span></a></div>

								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				{{ knp_pagination_render(programmes) }}
			</div>
		</div>
	</div>

{% endblock %}

