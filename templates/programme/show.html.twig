{% extends 'back-officeprogramme.html.twig' %}

{% block title %}Programme{% endblock %}

{% block body %}
    <h1>Programme {{ programme.Titre }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ programme.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ programme.Titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ programme.Description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ programme.prix }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ programme.date ? programme.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ programme.region }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ programme.adresse }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ programme.category}}</td>
            </tr>

            <tr>
                <th>Guide</th>
                <td>{{ programme.Guide }}</td>
            </tr>
            <tr>
                <th>Transport</th>
                <td>{{ programme.transport }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% for image in programme.getImages() %}
                        <img src="{{ asset('uploads/')~image.getNom() }}">
                    {% endfor %}
                </td>
            </tr>


            <a class= "btn btn-success" href="{{ path('programme_index') }}">Retourner a la liste</a>
        </tbody>
    </table>

    {{ include('programme/_delete_form.html.twig') }}

    <a class="btn btn-warning " href="{{ path('programme_edit', {'id': programme.id}) }}">Modifier</a>



{% endblock %}
