            </div>
            <div class="form-group">
                {{ form_label(form.images) }}
                {{ form_errors(form.images)  }}
                {{ form_widget(form.images , {'attr':{'class':'form-control p_input'}}) }}
            </div>





            {{ form_end(form) }}
        </div>
    </div>


    <!-- content-wrapper ends -->

    <!-- row ends -->

    <!-- page-body-wrapper ends -->



    <a class= "btn btn-success" href="{{ path('programme_index') }}">Retourner a la liste</a>

{% endblock %}
