    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Edit Profile</h1>
    <hr>



        <!-- edit form column -->
        <div class="col-md-9 personal-info">


            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.username,"Nom d\'utilisateur") }}
                    {{ form_errors(form.username)  }}
                    {{ form_widget(form.username , {'attr':{'class':'form-control p_input'}}) }}
                </div>

                    <div class="form-group">
                        {{ form_label(form.firstName,"Prenom") }}
                        {{ form_errors(form.firstName)  }}
                        {{ form_widget(form.firstName , {'attr':{'class':'form-control p_input'}}) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.tel,"Telephone") }}
                        {{ form_errors(form.tel)  }}
                        {{ form_widget(form.tel , {'attr':{'class':'form-control p_input'}}) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.lastName,"Nom") }}
                        {{ form_errors(form.lastName)  }}
                        {{ form_widget(form.lastName , {'attr':{'class':'form-control p_input'}}) }}
                    </div>


                    <div class="form-group">
                        {{ form_label(form.email,"Email") }}
                        {{ form_errors(form.email)  }}
                        {{ form_widget(form.email , {'attr':{'class':'form-control p_input'}}) }}
                    </div>
                <div class="form-group">
                    {{ form_label(form.email,"Email") }}
                    {{ form_errors(form.email)  }}
                    {{ form_widget(form.email , {'attr':{'class':'form-control p_input'}}) }}
                </div>
                <div class="form-group">
                    <div class="form-check form-switch">
                    {{ form_label(form.roles,"Role" ,{'attr':{'class':'form-check-label'}}) }}
                    {{ form_errors(form.roles)  }}
                    {{ form_widget(form.roles , {'attr':{'class':'form-check-input'}}) }}
                    </div>
                </div>
                <div class="row gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="text-right">
                            {{ form_widget(form.Modifier , {'attr':{'class':'btn btn-primary '}}) }}
                            <a href="{{ path('admin_users') }}"><button type="button" id="submit" name="submit" class="btn btn-secondary">Cancel</button></a>
                        </div>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
