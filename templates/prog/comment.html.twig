{% extends 'detail.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
    <h1>Annonce</h1>

    <table class="table">
        <tbody>
            <tr>

            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ annonce.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ annonce.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ annonce.date ? annonce.date|date('Y-m-d') : '' }}</td>
            </tr>

            <tr>

            <td>
                {% for image in annonce.getImages() %}
                    <img src="{{ asset('uploads/')~image.getName() }}">
                {% endfor %}
            </td>



            </tr>
        </tbody>
    </table>
    {{ form(commentForm) }}
{% endblock %}
